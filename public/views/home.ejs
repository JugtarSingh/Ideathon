<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commerce - Home</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/product-grid.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">
                <i class="fas fa-store"></i>
                E-Commerce
            </a>
            <ul class="navbar-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/bestsellers">Bestsellers</a></li>
                <li><a href="/categories">Categories</a></li>
            </ul>
            <div class="navbar-icons">
                <% if (user) { %>
                    <div class="user-profile" onclick="showProfileMenu()">
                        <i class="fas fa-user-circle"></i>
                        <span class="user-profile-name"><%= user.name %></span>
                    </div>
                    <a href="/cart" class="navbar-icon">
                        <i class="fas fa-shopping-cart"></i>
                        <% if (cartCount > 0) { %>
                            <span class="cart-badge"><%= cartCount %></span>
                        <% } %>
                    </a>
                <% } else { %>
                    <div class="navbar-icon" onclick="showLoginForm()" title="Login">
                        <i class="fas fa-user"></i>
                    </div>
                    <a href="/cart" class="navbar-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                <% } %>
            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <main>
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="hero-content">
                <h1 class="hero-title">Welcome to Our Store</h1>
                <p class="hero-subtitle">Discover amazing products at great prices</p>
                <a href="/categories" class="hero-cta">Shop Now</a>
            </div>
        </section>

        <!-- Products Section -->
        <section class="products-section">
            <h2 class="section-title">Featured Products</h2>
            <% if (products && products.length > 0) { %>
                <div class="products-grid">
                    <% products.forEach(product => { %>
                        <div class="product-card-wrapper">
                            <div class="product-card" style="cursor: pointer;" onclick="viewProduct('<%= product._id %>')">
                                <% if (product.bestseller) { %>
                                    <span class="bestseller-badge">Bestseller</span>
                                <% } %>
                                <img src="<%= (product.image && Array.isArray(product.image) && product.image.length > 0) ? product.image[0] : 'data:image/svg+xml;base64,' %>" 
                                     alt="<%= product.name || 'Product' %>" 
                                     class="product-image"
                                     loading="lazy"
                                     onerror="this.onerror=null; this.src='data:image/svg+xml;base64,';"
                                <div class="product-info">
                                    <h3 class="product-name"><%= product.name || 'Unnamed Product' %></h3>
                                    <p class="product-description"><%= product.description || 'No description available' %></p>
                                    <div class="product-footer">
                                        <span class="product-price">$<%= typeof product.price === 'number' ? product.price.toFixed(2) : '0.00' %></span>
                                        <button class="add-to-cart-btn" onclick="event.stopPropagation(); addToCart('<%= product._id %>')">
                                            <i class="fas fa-cart-plus"></i> Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">üì¶</div>
                    <h3>No products available</h3>
                    <p>Check back later for amazing products!</p>
                </div>
            <% } %>
        </section>

        <!-- Features Section -->
        <section class="features-section">
            <div class="features-grid">
                <div class="feature-card">
                    <div class="feature-icon">üöö</div>
                    <h3 class="feature-title">Free Shipping</h3>
                    <p class="feature-description">Free shipping on orders over $50</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üîí</div>
                    <h3 class="feature-title">Secure Payment</h3>
                    <p class="feature-description">Safe and secure payment options</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">‚Ü©Ô∏è</div>
                    <h3 class="feature-title">Easy Returns</h3>
                    <p class="feature-description">30-day return policy</p>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h3>About Us</h3>
                <p>Your trusted online shopping destination. We offer a wide range of products at competitive prices.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <a href="/">Home</a>
                <a href="/bestsellers">Bestsellers</a>
                <a href="/categories">Categories</a>
            </div>
            <div class="footer-section">
                <h3>Customer Service</h3>
                <a href="#">Contact Us</a>
                <a href="#">Shipping Info</a>
                <a href="#">Returns</a>
                <a href="#">FAQ</a>
            </div>
            <div class="footer-section">
                <h3>Follow Us</h3>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 E-Commerce. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/auth-helper.js"></script>
    <script>
        // Get token from localStorage if exists
        const token = localStorage.getItem('token');
        const userData = localStorage.getItem('user');

        function showLoginForm() {
            // Simply redirect to login page instead of using modal
            window.location.href = '/api/v1/user/login';
        }

        function showProfileMenu() {
            const userType = <%= user ? JSON.stringify(user.type) : '"user"' %>;
            if (userType === 'seller') {
                window.location.href = '/api/v1/user/dashboard?token=' + token;
            } else {
                window.location.href = '/user-dashboard?token=' + token;
            }
        }

        function viewProduct(productId) {
            const token = localStorage.getItem('token');
            if (token) {
                window.location.href = '/product/' + productId + '?token=' + token;
            } else {
                window.location.href = '/product/' + productId;
            }
        }

        async function addToCart(productId) {
            <% if (!user) { %>
                showLoginForm();
                return;
            <% } %>

            try {
                const response = await fetch('/api/v1/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({ productId })
                });

                const data = await response.json();
                
                if (response.ok) {
                    alert('Product added to cart!');
                    location.reload();
                } else {
                    alert(data.message || 'Failed to add to cart');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }

    </script>
</body>
</html>

