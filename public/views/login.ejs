<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account - Sign Up</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Create Account</h1>
        <p class="subtitle">Join us today and get started</p>
        
        <div id="message" class="hidden"></div>
        
        <form id="signupForm" method="POST" action="/api/v1/user/create-user">
            <!-- Personal Information -->
            <div class="form-group">
                <label for="name">Full Name <span class="required">*</span></label>
                <input type="text" id="name" name="name" placeholder="Enter your full name" required>
            </div>
            
            <div class="form-group">
                <label for="email">Email Address <span class="required">*</span></label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>
            
            <div class="row">
                <div class="form-group">
                    <label for="password">Password <span class="required">*</span></label>
                    <input type="password" id="password" name="password" placeholder="Create a password" required>
                </div>
                <div class="form-group">
                    <label for="type">Account Type <span class="required">*</span></label>
                    <select id="type" name="type" required>
                        <option value="user" selected>User</option>
                        <option value="seller">Seller</option>
                    </select>
                </div>
            </div>
            
            <!-- Location Information -->
            <h3 class="section-title">Location Details</h3>
            
            <div class="form-group">
                <label for="street">Street Address</label>
                <input type="text" id="street" name="street" placeholder="Enter street address">
            </div>
            
            <div class="row">
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" id="city" name="city" placeholder="Enter city">
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <input type="text" id="state" name="state" placeholder="Enter state">
                </div>
            </div>
            
            <div class="row">
                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="text" id="country" name="country" placeholder="Enter country">
                </div>
                <div class="form-group">
                    <label for="postalCode">Postal Code</label>
                    <input type="text" id="postalCode" name="postalCode" placeholder="Enter postal code">
                </div>
            </div>
            
            <button type="submit" id="submitBtn">
                Create Account
            </button>
        </form>
        
        <!-- Login Section -->
        <div class="divider">OR</div>
        
        <div class="login-section">
            <h2>Already have an account?</h2>
            <p class="subtitle">Login with your email and password</p>
            
            <div id="loginMessage" class="hidden"></div>
            
            <form id="loginForm" method="POST" action="/api/v1/user/login">
                <div class="form-group">
                    <label for="loginEmail">Email Address <span class="required">*</span></label>
                    <input type="email" id="loginEmail" name="email" placeholder="Enter your email" required>
                </div>
                
                <div class="form-group">
                    <label for="loginPassword">Password <span class="required">*</span></label>
                    <input type="password" id="loginPassword" name="password" placeholder="Enter your password" required>
                </div>
                
                <button type="submit" id="loginBtn">
                    Login
                </button>
            </form>
        </div>
    </div>

    <script>
        const form = document.getElementById('signupForm');
        const messageDiv = document.getElementById('message');
        const submitBtn = document.getElementById('submitBtn');

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Reset message
            messageDiv.className = 'hidden';
            messageDiv.innerHTML = '';
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="loading-spinner"></span>Creating Account...';
            
            // Collect form data
            const formData = {
                name: document.getElementById('name').value.trim(),
                email: document.getElementById('email').value.trim(),
                password: document.getElementById('password').value,
                type: document.getElementById('type').value,
                location: {
                    coordinates: [0, 0], // Default coordinates (longitude, latitude)
                    addressDetails: {
                        street: document.getElementById('street').value.trim(),
                        city: document.getElementById('city').value.trim(),
                        state: document.getElementById('state').value.trim(),
                        country: document.getElementById('country').value.trim(),
                        postalCode: document.getElementById('postalCode').value.trim()
                    }
                }
            };
            
            try {
                const response = await fetch('/api/v1/user/create-user', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    // Store token and user data
                    if (data.data && data.data.token) {
                        localStorage.setItem('token', data.data.token);
                        localStorage.setItem('user', JSON.stringify(data.data.user || data.data));
                        
                        // Redirect to appropriate dashboard based on user type
                        showMessage('Account created successfully! Redirecting...', 'success');
                        setTimeout(() => {
                            const userType = data.data.user?.type || data.data?.type;
                            if (userType === 'seller') {
                                window.location.href = '/api/v1/user/dashboard?token=' + data.data.token;
                            } else {
                                window.location.href = '/api/v1/user/dashboard?token=' + data.data.token;
                            }
                        }, 1000);
                    } else {
                        // Fallback to login page
                        showMessage('Account created successfully! Please login.', 'success');
                        setTimeout(() => {
                            window.location.href = '/api/v1/user/login';
                        }, 1500);
                    }
                } else {
                    const errorMsg = data.error?.message || data.message || 'Failed to create account. Please try again.';
                    showMessage(errorMsg, 'error');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = 'Create Account';
                }
            } catch (error) {
                showMessage('An error occurred. Please check your connection and try again.', 'error');
                submitBtn.disabled = false;
                submitBtn.innerHTML = 'Create Account';
                console.error('Error:', error);
            }
        });

        function showMessage(message, type) {
            messageDiv.className = type === 'error' ? 'error-message' : 'success-message';
            messageDiv.textContent = message;
            messageDiv.classList.remove('hidden');
        }
    </script>

    <script>
        // Login Form Handler
        const loginForm = document.getElementById('loginForm');
        const loginMessageDiv = document.getElementById('loginMessage');
        const loginBtn = document.getElementById('loginBtn');

        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Reset message
            loginMessageDiv.className = 'hidden';
            loginMessageDiv.innerHTML = '';
            loginBtn.disabled = true;
            loginBtn.innerHTML = '<span class="loading-spinner"></span>Logging in...';
            
            // Collect form data
            const loginData = {
                email: document.getElementById('loginEmail').value.trim(),
                password: document.getElementById('loginPassword').value
            };
            
            try {
                const response = await fetch('/api/v1/user/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(loginData)
                });
                
                const data = await response.json();
                
                if (response.ok) {
                    // Store JWT token in localStorage
                    if (data.data && data.data.token) {
                        localStorage.setItem('token', data.data.token);
                        localStorage.setItem('user', JSON.stringify(data.data.user));
                        showLoginMessage('Login successful! Redirecting to dashboard...', 'success');
                        
                        // Redirect to dashboard after 1 second with token
                        setTimeout(() => {
                            window.location.href = '/api/v1/user/dashboard?token=' + data.data.token;
                        }, 1000);
                    } else {
                        showLoginMessage('Login successful but token not received.', 'error');
                        loginBtn.disabled = false;
                        loginBtn.innerHTML = 'Login';
                    }
                } else {
                    const errorMsg = data.error?.message || data.message || 'Login failed. Please check your credentials.';
                    showLoginMessage(errorMsg, 'error');
                    loginBtn.disabled = false;
                    loginBtn.innerHTML = 'Login';
                }
            } catch (error) {
                showLoginMessage('An error occurred. Please check your connection and try again.', 'error');
                loginBtn.disabled = false;
                loginBtn.innerHTML = 'Login';
                console.error('Error:', error);
            }
        });

        function showLoginMessage(message, type) {
            loginMessageDiv.className = type === 'error' ? 'error-message' : 'success-message';
            loginMessageDiv.textContent = message;
            loginMessageDiv.classList.remove('hidden');
        }
    </script>
</body>
</html>
