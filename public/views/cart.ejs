<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - E-Commerce</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/product-grid.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">
                <i class="fas fa-store"></i>
                E-Commerce
            </a>
            <ul class="navbar-menu">
                <li><a href="/">Home</a></li>
                <li><a href="/bestsellers">Bestsellers</a></li>
                <li><a href="/categories">Categories</a></li>
            </ul>
            <div class="navbar-icons">
                <% if (user) { %>
                    <div class="user-profile" onclick="showProfile()">
                        <i class="fas fa-user-circle"></i>
                        <span class="user-profile-name"><%= user.name %></span>
                    </div>
                    <a href="/cart" class="navbar-icon">
                        <i class="fas fa-shopping-cart"></i>
                        <% if (cart && cart.length > 0) { %>
                            <span class="cart-badge"><%= cart.length %></span>
                        <% } %>
                    </a>
                <% } else { %>
                    <div class="navbar-icon" onclick="showLoginForm()" title="Login">
                        <i class="fas fa-user"></i>
                    </div>
                    <a href="/cart" class="navbar-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <section class="products-section">
            <h2 class="section-title">Shopping Cart</h2>
            
            <% if (user && cart && cart.length > 0) { %>
                <div class="products-grid">
                    <% cart.forEach(product => { %>
                        <div class="product-card-wrapper">
                            <div class="product-card">
                                <img src="<%= (product.image && Array.isArray(product.image) && product.image.length > 0) ? product.image[0] : '/assets/laptop.jfif' %>" 
                                     alt="<%= product.name || 'Product' %>" 
                                     class="product-image"
                                     loading="lazy"
                                     onerror="this.onerror=null; this.src='/assets/laptop.jfif';"
                                <div class="product-info">
                                    <h3 class="product-name"><%= product.name %></h3>
                                    <p class="product-description"><%= product.description %></p>
                                    <div class="product-footer">
                                        <span class="product-price">$<%= product.price.toFixed(2) %></span>
                                        <button class="btn btn-danger" onclick="removeFromCart('<%= product._id %>')" style="padding: 0.5rem 1rem; background: #ff4757; color: white; border: none; border-radius: 5px; cursor: pointer;">
                                            Remove
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div style="text-align: center; margin-top: 2rem; padding: 2rem; background: white; border-radius: 10px; max-width: 600px; margin: 2rem auto;">
                    <h3 style="margin-bottom: 1rem;">Total: $<%= cart.reduce((sum, p) => sum + p.price, 0).toFixed(2) %></h3>
                    <a class="btn btn-primary" href="/checkout" style="padding: 1rem 2rem; font-size: 1.1rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border: none; border-radius: 5px; cursor: pointer; font-weight: bold; display:inline-block;">
                        Proceed to Checkout
                    </a>
                </div>
            <% } else if (user) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">ðŸ›’</div>
                    <h3>Your cart is empty</h3>
                    <p><a href="/">Browse products</a> to add items to your cart</p>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-state-icon">ðŸ”’</div>
                    <h3>Please login to view your cart</h3>
                    <p><a href="/api/v1/user/login">Login</a> or <a href="/">continue shopping</a></p>
                </div>
            <% } %>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-section">
                <h3>About Us</h3>
                <p>Your trusted online shopping destination.</p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 E-Commerce. All rights reserved.</p>
        </div>
    </footer>

    <script src="/js/auth-helper.js"></script>
    <script>
        const token = localStorage.getItem('token');

        function showLoginForm() {
            window.location.href = '/api/v1/user/login';
        }

        function showProfile() {
            window.location.href = '/api/v1/user/dashboard?token=' + token;
        }

        async function removeFromCart(productId) {
            try {
                const response = await fetch(`/api/v1/cart/remove/${productId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': 'Bearer ' + token
                    }
                });

                const data = await response.json();
                
                if (response.ok) {
                    alert('Product removed from cart!');
                    location.reload();
                } else {
                    alert(data.message || 'Failed to remove from cart');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            }
        }

        // checkout handled via /checkout page now
    </script>
</body>
</html>

